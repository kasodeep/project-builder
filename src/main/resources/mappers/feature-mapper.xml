<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fury.deep.project_builder.repository.FeatureMapper">

    <select id="findAll" resultMap="FeatureResultMap.featureMap">
        SELECT *
        FROM feature
    </select>

    <select id="findById" resultMap="FeatureResultMap.featureMap">
        SELECT *
        FROM feature
        WHERE id = #{id}
    </select>

    <select id="existsById" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN TRUE ELSE FALSE END
        FROM feature
        WHERE id = #{id}
    </select>
</mapper>